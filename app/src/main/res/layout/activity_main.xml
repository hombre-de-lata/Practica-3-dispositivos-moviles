<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_launcher_foreground"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:srcCompat="@mipmap/logo1_zooba"
        android:layout_weight="50"/>

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_weight="9"


        android:hint="@string/user"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@mipmap/usuario"
        android:drawablePadding="10dp"
        android:background="@drawable/edt_style"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_weight="9"
        android:hint="@string/contracena"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@mipmap/candado"
        android:drawablePadding="10dp"
        android:background="@drawable/edt_style"/>

        />

    <Button
        android:id="@+id/buttoningresar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/ingresar"
        android:layout_weight="10"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/blanco"
        android:background="@drawable/btm_style"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registar"
        android:gravity="center"
        android:textColor="@color/blanco"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="20">

        <ImageButton
            android:id="@+id/imageButtonface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            tools:srcCompat="@mipmap/facebook" />

        <ImageButton
            android:id="@+id/imageButtongoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            tools:srcCompat="@mipmap/google" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recuperarcontracena"
        android:gravity="center"
        android:textColor="@color/blanco"
        android:textSize="18dp"/>

</LinearLayout>